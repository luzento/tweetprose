{
  "name": "tweetprose",
  "description": "Create tweetable strings from prose (paragraphs, sentences, long words, urls, etc)",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Joe Flateau",
  "main": "dist/index.js",
  "module": "dist/tweetsplitter.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "url": "https://github.com/luzento/tweetprose"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test",
    "release": "release-it"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/tweetsplitter.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/tweetsplitter.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.5",
    "@tsconfig/recommended": "^1.0.1",
    "dts-cli": "^1.2.0",
    "husky": "^7.0.4",
    "release-it": "^14.12.3",
    "size-limit": "^7.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  }
}
